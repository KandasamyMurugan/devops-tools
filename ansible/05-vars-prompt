- name: Prompting Variables
  hosts: all
  vars_prompt: 
    - prompt: Enter URL
      name: URL
      private: yes

  tasks:
    - name: Print URL
      debug:
        msg: "URL = {{URL}}"
        
    - name: username
      prompt: "What is your username?"
      private: no
    
    - name: password
      prompt: "What is your password?"

  tasks:
    - debug:
        msg: 'Logging in as {{ username }}'
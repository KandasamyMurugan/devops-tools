- name: Prompting Variables
  hosts: all
  vars_prompt: 
    - prompt: Enter URL
      name: URL
      private: yes
- name: Prompting username    
    - prompt: What is your username?
      name: username
      private: yes


  tasks:
    - name: Print URL
      debug:
        msg: "URL = {{URL}}"

  tasks:
    - name: Print username
      debug:
        msg: 'Logging in as {{ username }}'
  
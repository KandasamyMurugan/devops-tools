- name: Prompting Variables
  hosts: all
  vars_prompt: 
    - prompt: Enter URL
      name: URL
      private: yes

    - prompt: What is your username?
      name: username
      private: yes
    - prompt: What is your password?
      name: password
      private: yes


  tasks:
    - name: Print URL
      debug:
        msg: "URL = {{URL}}"

    - name: Print username
      debug:
        msg: 'Logging in as {{ username }}'

 